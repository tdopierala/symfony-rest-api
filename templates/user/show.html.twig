{% extends 'base.html.twig' %}

{% block title %}{{ user.name }} :: profile{% endblock %}

{% block body %}
<div class="container">
	<div class="row">
		<div class="col-8 offset-2">
			<h3>{{ user.name }}</h3>
		</div>
	</div>
	<div class="row">
		<div class="col-8 offset-2">

			<table class="table">
				<tbody>
					<tr>
						<td>Username:</td>
						<td>{{ user.name }}</td>
					</tr>
					<tr>
						<td>Email address:</td>
						<td>{{ user.email }}</td>
					</tr>
					<tr>
						<td>Password:</td>
						<td>**********</td>
					</tr>
					<tr>
						<td>Account created:</td>
						<td>{{ user.created | date('Y-m-d H:i:s') }}</td>
					</tr>
					<tr>
						<td>Last login:</td>
						<td>{{ user.lastlogin | date('Y-m-d H:i:s') }}</td>
					</tr>
					<tr>
						<td>Roles:</td>
						<td>
							{% for role in user.roles %}
								{{ role }}
							{% endfor %}
						</td>
					</tr>
					<tr>
						<td>Api token:</td>
						<td><input type="text" class="form-control" name="userToken" value="{{ user.token }}" disabled></td>
					</tr>
				</tbody>
			</table>

		</div>
	</div>
</div>
{% endblock %}
